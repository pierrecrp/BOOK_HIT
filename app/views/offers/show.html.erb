<div class="container-fluid mt-5">
  <div class="row d-flex align-items-stretch mt-2" style="min-height: 70vh;">
    <div class="col-md-6 d-flex justify-content-center align-items-center">
      <div class="card d-flex flex-column m-4 p-3 h-100" style="width: 100%;">
        <div class="card-body d-flex flex-column">
          <h1 class="text-center text-nowrap mt-3"><%= @offer.title %></h1>
          <div class="row mt-4 flex-grow-1">
            <div class="col-md-4 d-flex justify-content-center align-items-center mb-5">
              <img src="https://e7.pngegg.com/pngimages/513/311/png-clipart-silhouette-male-silhouette-animals-head.png" class="avatar-rectangle object-fit-cover">
            </div>
            <div class="col-md-8 d-flex flex-column pt-5">
              <h2 class="mt-5">Description:</h2>
              <p class="card-text-description"><%= @offer.description %></p>
              <div class="speciality <%= @offer.speciality.parameterize(separator: '_') %>">
                  <%= @offer.speciality.capitalize %>
              </div>
              <h3 class="text-nowrap mt-2"><i class="fa-solid fa-gun"></i> Service executed by <strong><%= @offer.user.user_name %></strong></h3>
              <h3 class="text-nowrap"><u><i class="fa-brands fa-bitcoin"></i></u> <strong><%=  @offer.price %> â‚¬</strong></h3>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% if current_user != @offer.user %>
      <div class="col-md-6 d-flex justify-content-center align-items-center">
        <div class="card d-flex flex-column m-4 p-3 h-100" style="width: 100%;">
          <div class="card-body d-flex flex-column justify-content-center">
            <h1 class="mt-3 text-center mb-5">Book this contract</h1>
            <div class="flex-grow-1">
              <%= render "bookings/form", offer: @offer, booking: @booking %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
    <% end %>
  </div>
</div>
