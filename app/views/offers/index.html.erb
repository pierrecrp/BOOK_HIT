<div class="banner" style="background-image: linear-gradient(rgba(200,200,200,0.3),rgba(200,200,200,0.3)), url(https://wallpaperswide.com/download/ammunition_weapons-wallpaper-2048x1152.jpg);">

  <div class="container">
    <h1>Don't get your hands dirty</h1>
    <a href="#down" class="btn btn-banner">Browse all contracts</a>
  </div>
</div>

<div class="container mb-4" id="down">
  <div class="row">
    <% if @offers.any? %>
      <% @offers.each do |offer| %>
        <div class="col-3 d-flex align-items-stretch mb-4">
          <%= link_to offer_path(offer) do %>
            <div class="card rounded-3 shadow p-3 my-4 bg-body rounded h-100">
              <img src="https://cms.ioi.dk/media/xxglukcv/hitman-web.jpg?width=2560" class="card-img-top" alt="...">
              <div class="card-body d-flex flex-column">
                <h4 class="card-title" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;"><%= offer.title %></h4>
                <p class="card-text-description"><%= offer.description %></p>
                <p class="card-text-description mt-auto">Price: <%= offer.price %>â‚¬</p>
                <div class="speciality <%= offer.speciality.parameterize(separator: '_') %>">
                  <%= offer.speciality.capitalize %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <em>Sorry, no hits found.</em>
    <% end %>
  </div>
</div>
