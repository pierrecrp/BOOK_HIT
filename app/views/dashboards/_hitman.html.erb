
<div class="row">

<div class="col-7 border-end border-weight-2">
  <h2 class="ms-2 mb-2">My offers</h2>
    <div class="row">
      <% @offers.each do |offer| %>
      <div class="card" style="col-3 width: 18rem;">
        <div class="card-body border-bottom border-weight-2 d-flex justify-content-between">
          <h4 class="card-title"><%= offer.title %></h4>
          <%= link_to "X", offer_path(offer), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
        <div class="ms-3 mt-2">
          <u>Created on:</u>
          <p><%= offer.created_at %></p>
        </div>
        <div class="card-body">
          <%= link_to "Open this Offer", offer_path(offer), class: 'btn btn-main' %>
        </div>
      </div>
    <% end %>
</div>
</div>

<div class="col-5">
<h2 class="ms-2 mb-3">My bookings</h2>
<%# @bookings.each do |booking| %>
  <div class="card mb-3 p-2">
    <div class="d-flex justify-content-between">
      <div class="card-body">
        <div class="d-flex flex-row"><i class="fa-solid fa-user"></i><h5 class="ms-2">target<%# booking.target %></h5></div>
        <p class="card-text">Eliminate before deadline<%# booking.deadline %></p>
      </div>

      <div class="card-body text-end align-bottom">
      <a href="#" class="btn btn-accept">Accept</a> <a href="#" class="btn btn-decline">Decline</a>
      </div>
    </div>

  </div>
<%# end %>
</div>

</div>
